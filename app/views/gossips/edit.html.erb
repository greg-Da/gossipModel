<% if @gossip.errors.any? %>
    <% @gossip.errors.full_messages.each do |message| %>
      <div class="alert alert-danger" role="alert"><%= message %></div>
    <% end %>
<% end %>

<h1 class="text-center my-4">Update ce potin !</h1>

<div class="m-auto col-8">

  <%= form_tag url_for(action: 'update'), method: "put" do %>

      <%= label_tag 'Titre' %>
      <%= text_field_tag 'title', @gossip.title, class: 'form-control' %>
      <br /> <br />

      <%= label_tag 'Contenu' %>
      <%= text_area_tag 'content', @gossip.content, class: 'form-control' %>

      <div class="d-flex justify-content-center my-3">
        <%= submit_tag "Update le potin" , class: 'btn btn-primary btn-lg'%>
      </div>

  <% end %>
</div>